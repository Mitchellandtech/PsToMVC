@{
    ViewBag.Title = "Contact";
}

<div>
    @Html.Partial("_HeaderPartial")
</div>

<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="contact__text">
                    <div class="section-title">
                        <h2>Contact Details</h2>
                    </div>
                    <p>
                        If you have any questions please feel free to reach out.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="contact__widget__item">
                    <div class="contact__widget__item__icon">
                        <img src="~/Content/img/contact/ci-2.png" alt="">
                    </div>
                    <div class="contact__widget__item__text">
                        <h5>Email Address</h5>
                        <span>mitchellb.67577@gmail.com</span>
                    </div>
                </div>
            </div>
        </div>
        <!--<div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12087.069761554938!2d-74.2175599360452!3d40.767139456514954!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c254b5958982c3%3A0xb6ab3931055a2612!2sEast%20Orange%2C%20NJ%2C%20USA!5e0!3m2!1sen!2sbd!4v1581710470843!5m2!1sen!2sbd"
                    height="460" style="border:0;" allowfullscreen=""></iframe>
        </div>-->
        <div class="row">
            <div class="col-lg-5">
                <div class="contact__form__text">
                    <div class="section-title">
                        <h2>Get in touch</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="contact__form">
                        <form action="#" method="get" onsubmit="validateForm(event)">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <input type="text" id="tbName" name="name" class="form-control" placeholder="Name">
                                    <span id="rfvName" class="invalid"></span>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <input type="text" id="tbEmail" name="email" class="form-control" placeholder="Email" />
                                    <span id="rfvEmail" class="invalid"></span>
                                </div>
                                <div class="col-lg-12">
                         <input type="text" id="tbSubject" name="subject" class="form-control" placeholder="Subject" />
                                    <span id="rfvSubject" class="invalid"></span>
                                </div>
                                <div class="col-lg-12">
                                    <textarea id="tbMessage" name="message" class="form-control" placeholder="Message"></textarea>
                                    <span id="rfvMessage" class="invalid"></span>
                                    <button type="submit" class="site-btn">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</section>